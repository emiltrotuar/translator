{
  "manifest_version": 2,
  "name": "translator",
  "version": "1.0",
  "description": "Translates a selected text using Lingua Leo API",
  "icons": {
    "64": "dictionary.png"
  },
  "permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["translator.js"],
      "run_at": "document_end"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "translator-ff@example.com",
      "strict_min_version": "103.0"
    }
  }
}
